@model CreateResumeViewModel
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="dark-text">
	<h1>Add To Resume</h1>

	<form class="form-wrapper dark-text" asp-action="Create" method="post" enctype="multipart/form-data">
		<div class="form-group">
			<h3>Add Summary</h3>
			<label asp-for="Resumes.Summary"></label>
			<textarea asp-for="Resumes.Summary" class="form-control" style="height:100px"></textarea>
			<span asp-validation-for="Resumes.Summary" class="danger-text"></span>
		</div>		

		<div class="form-group">
			<h3 class="py-1">Add Education</h3>
			
				<div class="form-group">
					<label asp-for="Educations.InstitutionName"></label>
					<input asp-for="Educations.InstitutionName" class="form-control" />
				</div>
				<div class="form-group">
					<label asp-for="Educations.Degree"></label>
					<input asp-for="Educations.Degree" class="form-control" />
				</div>
				<div class="form-group">
					<label asp-for="Educations.GraduationDate"></label>
					<input asp-for="Educations.GraduationDate" type="date" class="form-control" />
				</div>				
			
		</div>		

		<div class="form-group">
			<h3 class="py-1">Add Work Experience</h3>
			
				<div class="form-group">
					<label asp-for="WorkExperiences.CompanyName"></label>
					<input asp-for="WorkExperiences.CompanyName" class="form-control" />
				</div>	
				<div class="form-group">
					<label asp-for="WorkExperiences.JobTitle"></label>
					<input asp-for="WorkExperiences.JobTitle" class="form-control" />
				</div>	
				<div class="form-group">
					<label asp-for="WorkExperiences.StartDate"></label>
					<input asp-for="WorkExperiences.StartDate" type="date" class="form-control" />
				</div>	
				<div class="form-group">
					<label asp-for="WorkExperiences.EndDate"></label>
					<input asp-for="WorkExperiences.EndDate" type="date" class="form-control" />
				</div>				
				<div class="form-group">
					<label asp-for="WorkExperiences.Description"></label>
					<textarea asp-for="WorkExperiences.Description" class="form-control" style="height:150px"></textarea>
				</div>	
		
		</div>		
		

		<button type="submit" class="btn">Add</button>
		<a asp-controller="Project" asp-action="Index" class="btn ">Back to Resume</a>

	</form>

</section> 