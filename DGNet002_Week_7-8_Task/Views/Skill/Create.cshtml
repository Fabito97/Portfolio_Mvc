@model Skill
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="dark-text">
	<h1>Add New Skill</h1>

	<form class="form-wrapper" asp-action="Create" method="post">
		<input asp-for="SkillId" hidden />
		<div class="form-group">
			<label asp-for="SkillName"></label>
			<input asp-for="SkillName" class="form-control"/>
			<span asp-validation-for="SkillName" class="danger-text"></span>
		</div>		
		<div class="form-group">
			<label asp-for="Description"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="danger-text"></span>
		</div>				
		<button type="submit" class="btn">Add</button>
		<a asp-controller="Skill" asp-action="Index" class="btn ">Back to Skills</a>

	</form>

</section>