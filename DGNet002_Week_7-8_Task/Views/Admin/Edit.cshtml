@model AdminUser
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="dark-text">
	<h1>Edit Contact Details</h1>

	<form class="form-wrapper" asp-action="Edit" method="post">
		<input asp-for="Id" hidden />
		<input asp-for="PasswordHash" hidden />
		<div class="form-group">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control"/>
			<span asp-validation-for="Name" class="danger-text"></span>
		</div>		
		<div class="form-group">
			<label asp-for="UserName"></label>
			<input asp-for="UserName" class="form-control" />
			<span asp-validation-for="UserName" class="danger-text"></span>
		</div>		
		<div class="form-group">
			<label asp-for="Email"></label>
			<input asp-for="Email" class="form-control"/>
			<span asp-validation-for="Email" class="danger-text"></span>
		</div>
		<div class="form-group">
			<label asp-for="PhoneNumber"></label>
			<input asp-for="PhoneNumber" class="form-control"/>
			<span asp-validation-for="PhoneNumber" class="danger-text"></span>
		</div>
		<div class="form-group">
			<label asp-for="Address"></label>
			<input asp-for="Address" class="form-control"/>
			<span asp-validation-for="Address" class="danger-text"></span>
		</div>
		<div class="form-group">
			<label asp-for="City"></label>
			<input asp-for="City" class="form-control"/>
			<span asp-validation-for="City" class="danger-text"></span>
		</div>

		<button type="submit" class="btn">Update</button>
	</form>

</section>