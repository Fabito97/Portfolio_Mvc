@model ProjectViewModel
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="dark-text">
	<h1 class=py-2>Edit Project</h1>
	<div class="flex-left">

		<div class="card" style="width:300px">
					<div class="card-body">   
					   <img width="300px" src="@Model.ProjectUrl"/>          
					  <div class="card-text">
						  <h3>@Model.Title</h3>
						<h3 class="dark-text">@Model.Description</h3>
					  </div>
					</div>    			     
				</div>

		<form style="width: 500px" class="form-wrapper form-wrapper-edit" asp-action="Edit" method="post" enctype="multipart/form-data">
			<input asp-for="ProjectItemId" hidden />
			<input asp-for="PublicId" hidden />
			<div class="form-group">
				<label asp-for="Title"></label>
				<input asp-for="Title" class="form-control"/>
				<span asp-validation-for="Title" class="danger-text"></span>
			</div>		
			<div class="form-group">
				<label asp-for="Description"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="danger-text"></span>
			</div>
			<div class="form-group">
				<label asp-for="Image"></label>
				<input asp-for="Image" type="file" name="Image" class="form-control"/>
				<span asp-validation-for="Image" class="danger-text"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProjectLink"></label>
				<input asp-for="ProjectLink" class="form-control"/>
				<span asp-validation-for="ProjectLink" class="danger-text"></span>
			</div>

			<button type="submit" class="btn">Update</button>

		</form>

	</div>
</section>