@model LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}

  <section id="login" class="bg-dark">
      <div class="login-wrapper">
          <h1 class="m-heading text-center">Login</h1>

          <form class="form" asp-action="Login" method="post">
            <div class="form-group">
              <label asp-for="Email"></label>
              <input asp-for="Email" name="email" id="name">
              <span asp-validation-for="Email" class="text-danger" style="font-size: 12px"></span>
            </div>
            <div class="form-group">
              <label asp-for="Password">Password</label>
              <input asp-for="Password" name="Password" id="email">
              <span asp-validation-for="Password" class="text-danger" style="font-size: 12px"></span>
            </div>
                <button class="login-btn" type="submit">Login</button>                     
          </form>
        </div>
  </section>